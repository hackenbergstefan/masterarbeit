                evalToZero += [1]
                countPolysForThisDecomp += 1
            #print "\ti.e. cycl=",cycl
            # add Co-Factors
            for f,mult in cycl.factor():
                g = cycl.quo_rem(f)[0]
                gE = g.map_coefficients(h)
                #print "\tgE=",gE
                polys += [map(lambda x: x.polynomial().list(), gE.list())]
                frobPowers += [d]
