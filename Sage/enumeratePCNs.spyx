            divs = [1]
        else:
            divs = divisors(get_module_character(*decomp))
            #print "for decomp=",decomp, "consider divs=",divs
            divs = filter(lambda x: x in notComplBasicDivisors, divs)
            #print "\t\t\tnow only", divs
